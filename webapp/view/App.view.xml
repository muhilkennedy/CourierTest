<mvc:View controllerName="ns.TestCourier.controller.App" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<headerContent>
					<Button type="Default" text="Login" press="onLogin" icon="sap-icon://visits" />
				</headerContent>
				<content>
					<VBox class="centerposition" >
						<Input id="TrackingID" type="Text" required="true" placeholder="Tracking ID"
										valueState="None" valueStateText="Invalid Tracking ID" />
						<Button width="100%" type="Emphasized" text="Track Courier" press="onTrackCourier" icon="sap-icon://locate-me"/>				
					</VBox>
				</content>
				<footer>
						<Toolbar>
							<ToolbarSpacer/>
							<Button type="Default" text="Policies!!" press="onPolicyCheck" icon="sap-icon://drill-down" />
						</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>